{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a Multi-AZ Amazon EFS with auto mount.", "Resources": {"FileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"PerformanceMode": "generalPurpose", "Encrypted": true}}, "MountTarget1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "FileSystem"}, "SubnetId": {"Fn::GetAtt": ["Subnet1", "SubnetId"]}, "SecurityGroups": [{"Fn::GetAtt": ["EFSSecurityGroup", "GroupId"]}]}}, "MountTarget2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "FileSystem"}, "SubnetId": {"Fn::GetAtt": ["Subnet2", "SubnetId"]}, "SecurityGroups": [{"Fn::GetAtt": ["EFSSecurityGroup", "GroupId"]}]}}, "EFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "EFS security group for Multi-AZ", "VpcId": {"Ref": "VpcId"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 2049, "ToPort": 2049, "CidrIp": "0.0.0.0/0"}]}}}, "Outputs": {"EFSFileSystemId": {"Description": "The ID of the EFS file system.", "Value": {"Ref": "FileSystem"}}}}