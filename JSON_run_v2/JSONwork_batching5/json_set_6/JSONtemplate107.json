{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"NetworkLoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Name": "MyNetworkLoadBalancer", "Type": "network", "Subnets": [{"Ref": "Subnet1"}, {"Ref": "Subnet2"}], "Scheme": "internet-facing"}}, "NLBListener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "NLBTargetGroup"}}], "LoadBalancerArn": {"Ref": "NetworkLoadBalancer"}, "Port": 80, "Protocol": "TCP"}}, "NLBTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"Port": 80, "Protocol": "TCP", "VpcId": {"Ref": "VpcId"}, "TargetType": "instance", "HealthCheckProtocol": "TCP", "HealthCheckPort": "traffic-port", "HealthCheckEnabled": true, "HealthCheckIntervalSeconds": 30, "HealthCheckTimeoutSeconds": 10, "HealthyThresholdCount": 3, "UnhealthyThresholdCount": 3}}, "EIPAssoc1": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["EIP1", "AllocationId"]}, "NetworkInterfaceId": {"Ref": "NetworkInterface1"}}}, "EIPAssoc2": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["EIP2", "AllocationId"]}, "NetworkInterfaceId": {"Ref": "NetworkInterface2"}}}, "EIP1": {"Type": "AWS::EC2::EIP"}, "EIP2": {"Type": "AWS::EC2::EIP"}}, "Parameters": {"VpcId": {"Type": "String", "Description": "VPC ID for the network load balancer"}, "Subnet1": {"Type": "String", "Description": "Subnet ID for the first AZ"}, "Subnet2": {"Type": "String", "Description": "Subnet ID for the second AZ"}, "NetworkInterface1": {"Type": "String", "Description": "Network Interface ID for the first network interface"}, "NetworkInterface2": {"Type": "String", "Description": "Network Interface ID for the second network interface"}}}