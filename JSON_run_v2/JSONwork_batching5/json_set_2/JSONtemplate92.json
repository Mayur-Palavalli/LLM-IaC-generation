{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create two EC2 instances behind a load balancer with a simple health check.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "Must be a valid EC2 instance type."}, "InstancePort": {"Description": "The port where the server listens", "Type": "Number", "Default": "8888"}, "VPC": {"Description": "VPC for the resources", "Type": "AWS::EC2::VPC::Id"}, "SubnetA": {"Description": "Subnet for the resources", "Type": "AWS::EC2::Subnet::Id"}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the web server", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}, {"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "CidrIp": "0.0.0.0/0"}]}}, "ApplicationLoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Name": "ApplicationLoadBalancer", "Scheme": "internet-facing", "Subnets": [{"Ref": "SubnetA"}], "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}]}}, "WebInstance1": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SubnetId": {"Ref": "SubnetA"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "ImageId": "ami-0c55b159cbfafe1f0"}}, "WebInstance2": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SubnetId": {"Ref": "SubnetA"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "ImageId": "ami-0c55b159cbfafe1f0"}}, "TargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"Port": 80, "Protocol": "HTTP", "VpcId": {"Ref": "VPC"}, "HealthCheckProtocol": "HTTP", "HealthCheckPort": {"Ref": "InstancePort"}, "HealthCheckPath": "/", "TargetType": "instance", "Targets": [{"Id": {"Ref": "WebInstance1"}}, {"Id": {"Ref": "WebInstance2"}}]}}, "Listener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "TargetGroup"}}], "LoadBalancerArn": {"Ref": "ApplicationLoadBalancer"}, "Port": 80, "Protocol": "HTTP"}}}}