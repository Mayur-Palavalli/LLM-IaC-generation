{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template to create a load balanced, auto-scaled sample website.", "Parameters": {"InstanceType": {"Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium", "t2.large"], "Description": "EC2 instance type"}, "KeyName": {"Type": "AWS::EC2::KeyPair::KeyName", "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances"}, "InstancePort": {"Type": "Number", "Default": 8888, "Description": "The port on which the web server is running"}, "SubnetId": {"Type": "List<AWS::EC2::Subnet::Id>", "Description": "Subnet Ids for the instances"}, "VpcId": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC Id for the instances"}}, "Resources": {"WebServerGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"DesiredCapacity": "2", "LaunchConfigurationName": {"Ref": "LaunchConfig"}, "MinSize": "1", "MaxSize": "3", "VPCZoneIdentifier": {"Ref": "SubnetId"}, "TargetGroupARNs": [{"Ref": "WebAppTargetGroup"}], "HealthCheckType": "ELB", "HealthCheckGracePeriod": 300}}, "LaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": {"Ref": "InstanceType"}, "KeyName": {"Ref": "KeyName"}, "SecurityGroups": [{"Ref": "InstanceSecurityGroup"}], "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n", "echo '<html><h1>Sample Website</h1></html>' > /var/www/html/index.html\n"]]}}}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Subnets": {"Ref": "SubnetId"}, "SecurityGroups": [{"Ref": "LBSecurityGroup"}], "Scheme": "internet-facing"}}, "WebAppTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"HealthCheckPath": "/", "Port": 80, "Protocol": "HTTP", "VpcId": {"Ref": "VpcId"}}}, "Listener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "WebAppTargetGroup"}}], "LoadBalancerArn": {"Ref": "LoadBalancer"}, "Port": 80, "Protocol": "HTTP"}}, "InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"VpcId": {"Ref": "VpcId"}, "GroupDescription": "Enable access to the web server", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "SourceSecurityGroupId": {"Ref": "LBSecurityGroup"}}]}}, "LBSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"VpcId": {"Ref": "VpcId"}, "GroupDescription": "Allow HTTP traffic to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}}, "Outputs": {"ELBEndpoint": {"Description": "The URL of the load balancer", "Value": {"Fn::GetAtt": ["LoadBalancer", "DNSName"]}}}}