{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"SampleWebsiteBucket": {"Type": "AWS::S3::Bucket", "Properties": {"BucketName": {"Fn::Sub": "${AWS::StackName}-access-logs"}}}, "SampleWebsiteBucketPolicy": {"Type": "AWS::S3::BucketPolicy", "Properties": {"Bucket": {"Ref": "SampleWebsiteBucket"}, "PolicyDocument": {"Statement": [{"Effect": "Allow", "Principal": "*", "Action": "s3:PutObject", "Resource": {"Fn::Sub": "arn:aws:s3:::${SampleWebsiteBucket}/*"}}]}}}, "SampleWebsiteELB": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}, "Listeners": [{"InstancePort": 80, "LoadBalancerPort": 80, "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": 3, "UnhealthyThreshold": 5, "Interval": 30, "Timeout": 5}, "CrossZone": true, "AccessLoggingPolicy": {"Enabled": true, "S3BucketName": {"Ref": "SampleWebsiteBucket"}, "EmitInterval": 5, "S3BucketPrefix": "ELB-Access-Logs/"}, "AvailabilityZones": {"Fn::GetAZs": {"Ref": "AWS::Region"}}}}, "SampleWebsiteLaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": "t2.micro"}}, "SampleWebsiteAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"LaunchConfigurationName": {"Ref": "SampleWebsiteLaunchConfiguration"}, "MinSize": 1, "MaxSize": 5, "DesiredCapacity": 2, "VPCZoneIdentifier": [{"Fn::ImportValue": "SampleVPCSubnet1"}, {"Fn::ImportValue": "SampleVPCSubnet2"}], "LoadBalancerNames": [{"Ref": "SampleWebsiteELB"}]}}}}