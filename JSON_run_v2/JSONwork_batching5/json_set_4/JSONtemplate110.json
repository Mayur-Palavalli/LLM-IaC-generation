{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"ElasticIP1": {"Type": "AWS::EC2::EIP"}, "ElasticIP2": {"Type": "AWS::EC2::EIP"}, "NLB": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Name": "MyNLB", "Scheme": "internet-facing", "Type": "network", "Subnets": [{"Ref": "Subnet1"}, {"Ref": "Subnet2"}], "LoadBalancerAttributes": [{"Key": "load_balancer_cross_zone_enabled", "Value": "true"}]}}, "NLBListener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "TargetGroup"}}], "LoadBalancerArn": {"Ref": "NLB"}, "Port": 80, "Protocol": "TCP"}}, "TargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"Name": "MyTargetGroup", "Port": 80, "Protocol": "TCP", "VpcId": {"Ref": "VPC"}, "TargetType": "instance", "HealthCheckProtocol": "TCP", "HealthCheckPort": "traffic-port", "HealthCheckIntervalSeconds": 30, "HealthCheckTimeoutSeconds": 10, "HealthyThresholdCount": 3, "UnhealthyThresholdCount": 3}}, "NLBSubnet1Attachment": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["ElasticIP1", "AllocationId"]}, "NetworkInterfaceId": {"Fn::GetAtt": ["NLB", "NetworkInterfaces[0].NetworkInterfaceId"]}}}, "NLBSubnet2Attachment": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["ElasticIP2", "AllocationId"]}, "NetworkInterfaceId": {"Fn::GetAtt": ["NLB", "NetworkInterfaces[1].NetworkInterfaceId"]}}}}, "Parameters": {"Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "The first subnet ID"}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "The second subnet ID"}, "VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "The ID of the VPC"}}}