{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"IotAnalyticsChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"Unlimited": true}}}, "IotAnalyticsDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore"}}, "IotAnalyticsPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "ChannelActivity", "ChannelName": {"Ref": "IotAnalyticsChannel"}, "Next": "SqlActivity"}}, {"SelectAttributes": {"Name": "SqlActivity", "Attributes": ["temperature", "humidity"], "Next": "DatastoreActivity"}}, {"Datastore": {"Name": "DatastoreActivity", "DatastoreName": {"Ref": "IotAnalyticsDatastore"}}}]}}, "IotAnalyticsDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "Actions": [{"ActionName": "MySQLAction", "QueryAction": {"SqlQuery": "SELECT * FROM MyChannel WHERE temperature > 25"}}], "RetentionPeriod": {"NumberOfDays": 365, "Unlimited": false}}}}}