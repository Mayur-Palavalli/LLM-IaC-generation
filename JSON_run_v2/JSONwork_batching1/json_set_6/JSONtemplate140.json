{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyDBParameterGroup": {"Type": "AWS::RDS::DBParameterGroup", "Properties": {"Description": "My custom DB parameter group", "Family": "mysql8.0", "Parameters": {"max_connections": "100"}}}, "MyDBInstance": {"Type": "AWS::RDS::DBInstance", "Properties": {"DBInstanceClass": "db.t3.micro", "Engine": "mysql", "MasterUsername": "admin", "MasterUserPassword": {"Ref": "DBMasterPassword"}, "AllocatedStorage": "20", "DBParameterGroupName": {"Ref": "MyDBParameterGroup"}}}}, "Outputs": {"DBInstanceEndpoint": {"Value": {"Fn::GetAtt": ["MyDBInstance", "Endpoint.Address"]}, "Description": "The connection endpoint for the RDS instance."}}, "Parameters": {"DBMasterPassword": {"Type": "AWS::SecretsManager::Secret", "Description": "The master password for the RDS instance.", "Default": "resolve:secretsmanager:DBMasterPassword:SecretString"}}}