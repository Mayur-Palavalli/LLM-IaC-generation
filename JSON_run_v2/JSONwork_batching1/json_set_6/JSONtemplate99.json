{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a load balanced, Auto Scaled sample website.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "must be a valid EC2 instance type."}, "WebsitePort": {"Description": "The port the application is running on within the instance", "Type": "Number", "Default": 8888}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80 locked down to the ELB", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebsitePort"}, "ToPort": {"Ref": "WebsitePort"}, "SourceSecurityGroupId": {"Fn::GetAtt": ["LoadBalancerSecurityGroup", "GroupId"]}}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "ElasticLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Listeners": [{"InstancePort": {"Ref": "WebsitePort"}, "LoadBalancerPort": 80, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "CrossZone": true, "Subnets": [{"Fn::ImportValue": "MyVPCSubnet"}]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "ImageId": "ami-0abcdef1234567890", "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum update -y\n", "yum install -y httpd\n", "systemctl start httpd\n", "systemctl enable httpd\n", "echo \"<h1>Welcome to the Sample Website</h1>\" > /var/www/html/index.html\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": [{"Fn::ImportValue": "MyVPCSubnet"}], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "TargetGroupARNs": [{"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}], "HealthCheckType": "EC2", "HealthCheckGracePeriod": 300}, "UpdatePolicy": {"AutoScalingReplacingUpdate": {"WillReplace": true}, "AutoScalingRollingUpdate": {"MinInstancesInService": "1", "MaxBatchSize": "1", "PauseTime": "PT15M"}}}}, "Outputs": {"URL": {"Description": "URL of the sample website", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}]]}}}}