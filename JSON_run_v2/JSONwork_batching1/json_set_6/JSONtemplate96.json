{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a load balanced, Auto Scaled sample website with instances locked down to only accept traffic from the load balancer.", "Parameters": {"InstancePort": {"Description": "The port on which the instances are listening.", "Type": "Number", "Default": "8888"}, "InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro"}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the EC2 instances from the load balancer only", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "SourceSecurityGroupId": {"Ref": "LoadBalancerSecurityGroup"}}], "Tags": [{"Key": "Name", "Value": "web-server-sg"}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}], "Tags": [{"Key": "Name", "Value": "lb-sg"}]}}, "ElasticLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "Subnets": ["subnet-aaaaaaa", "subnet-bbbbbbb"]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum install -y httpd\n", "systemctl start httpd\n", "systemctl enable httpd\n", "echo \"<h1>Welcome to the sample website</h1>\" > /var/www/html/index.html\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-aaaaaaa", "subnet-bbbbbbb"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "HealthCheckType": "ELB", "Tags": [{"Key": "Name", "Value": "autoscale-group", "PropagateAtLaunch": "true"}]}}}, "Outputs": {"URL": {"Description": "The URL of the load balancer", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}]]}}}}