{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template for a Load Balanced, Auto Scaled sample website with time-based scheduled actions and health check.", "Parameters": {"InstanceType": {"Type": "String", "Default": "t3.micro", "Description": "EC2 instance type"}, "KeyName": {"Type": "AWS::EC2::KeyPair::KeyName", "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances"}, "SubnetIds": {"Type": "List<AWS::EC2::Subnet::Id>", "Description": "List of Subnet IDs"}}, "Resources": {"SampleLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Subnets": {"Ref": "SubnetIds"}, "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}}}, "SampleLaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": {"Ref": "InstanceType"}, "KeyName": {"Ref": "KeyName"}}}, "SampleAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": {"Ref": "SubnetIds"}, "LaunchConfigurationName": {"Ref": "SampleLaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1"}}, "ScaleUpPolicy": {"Type": "AWS::AutoScaling::ScalingPolicy", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "PolicyType": "SimpleScaling", "AdjustmentType": "ChangeInCapacity", "ScalingAdjustment": "1", "Cooldown": "300"}}, "ScaleDownPolicy": {"Type": "AWS::AutoScaling::ScalingPolicy", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "PolicyType": "SimpleScaling", "AdjustmentType": "ChangeInCapacity", "ScalingAdjustment": "-1", "Cooldown": "300"}}, "MorningSchedule": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "DesiredCapacity": "2", "Recurrence": "0 8 * * *"}}, "EveningSchedule": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "DesiredCapacity": "1", "Recurrence": "0 18 * * *"}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "The DNS name of the load balancer", "Value": {"Fn::GetAtt": ["SampleLoadBalancer", "DNSName"]}}}}