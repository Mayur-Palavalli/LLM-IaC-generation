{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for Multi-AZ EFS with automatic mounting", "Resources": {"EFSFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"Encrypted": true, "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}]}}, "EFSMountTarget1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "EFSFileSystem"}, "SubnetId": {"Ref": "FirstSubnet"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "EFSMountTarget2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "EFSFileSystem"}, "SubnetId": {"Ref": "SecondSubnet"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "EFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "EFS security group", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 2049, "ToPort": 2049}]}}}, "Parameters": {"VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC to launch EFS"}, "FirstSubnet": {"Type": "AWS::EC2::Subnet::Id", "Description": "First subnet ID for EFS mount target"}, "SecondSubnet": {"Type": "AWS::EC2::Subnet::Id", "Description": "Second subnet ID for EFS mount target"}}, "Outputs": {"EFSFileSystemId": {"Description": "The ID of the EFS file system", "Value": {"Ref": "EFSFileSystem"}}}}