{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"ElasticIPAddress1": {"Type": "AWS::EC2::EIP"}, "ElasticIPAddress2": {"Type": "AWS::EC2::EIP"}, "NetworkLoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Name": "MyNetworkLoadBalancer", "Scheme": "internet-facing", "Type": "network", "Subnets": [{"Ref": "Subnet1"}, {"Ref": "Subnet2"}], "LoadBalancerAttributes": [{"Key": "deletion_protection.enabled", "Value": "false"}], "IpAddressType": "ipv4"}}, "LoadBalancerListener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"LoadBalancerArn": {"Ref": "NetworkLoadBalancer"}, "Port": 80, "Protocol": "TCP", "DefaultActions": [{"Type": "fixed-response", "FixedResponseConfig": {"MessageBody": "Fixed response content", "StatusCode": "200", "ContentType": "text/plain"}}]}}, "TargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"Name": "MyTargetGroup", "Port": 80, "Protocol": "TCP", "VpcId": {"Ref": "VPC"}, "HealthCheckProtocol": "TCP", "HealthCheckPort": "80"}}, "EIPAssociation1": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["ElasticIPAddress1", "AllocationId"]}, "NetworkInterfaceId": {"Fn::Select": [0, {"Fn::GetAtt": ["NetworkLoadBalancer", "NetworkInterfaces"]}]}}}, "EIPAssociation2": {"Type": "AWS::EC2::EIPAssociation", "Properties": {"AllocationId": {"Fn::GetAtt": ["ElasticIPAddress2", "AllocationId"]}, "NetworkInterfaceId": {"Fn::Select": [1, {"Fn::GetAtt": ["NetworkLoadBalancer", "NetworkInterfaces"]}]}}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS Name of the Network Load Balancer", "Value": {"Fn::GetAtt": ["NetworkLoadBalancer", "DNSName"]}}}, "Parameters": {"VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC Id to deploy NLB"}, "Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet Id 1 to deploy NLB"}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet Id 2 to deploy NLB"}}}