{"AWSTemplateFormatVersion": "2010-09-09", "Description": "CloudFormation template for a highly-available RDS DBInstance with a read replica.", "Resources": {"MyDBSubnetGroup": {"Type": "AWS::RDS::DBSubnetGroup", "Properties": {"DBSubnetGroupDescription": "Subnet group for RDS instance", "SubnetIds": ["subnet-abcdef12", "subnet-12345678"]}}, "MyDBInstance": {"Type": "AWS::RDS::DBInstance", "Properties": {"AllocatedStorage": "20", "DBInstanceClass": "db.t3.micro", "Engine": "mysql", "MasterUsername": "admin", "MasterUserPassword": {"Ref": "DBPassword"}, "DBSubnetGroupName": {"Ref": "MyDBSubnetGroup"}, "MultiAZ": true, "VPCSecurityGroups": ["sg-01234567"]}}, "MyDBReadReplica": {"Type": "AWS::RDS::DBInstance", "Properties": {"SourceDBInstanceIdentifier": {"Ref": "MyDBInstance"}, "DBInstanceClass": "db.t3.micro", "Engine": "mysql", "DBSubnetGroupName": {"Ref": "MyDBSubnetGroup"}, "VPCSecurityGroups": ["sg-01234567"]}}}, "Parameters": {"DBPassword": {"Type": "AWS::SSM::Parameter::Value<String>", "NoEcho": true, "Description": "The password for the database admin user"}}}