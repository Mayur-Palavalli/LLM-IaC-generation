{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create a Multi-AZ EFS with automount", "Resources": {"MyEFSFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"PerformanceMode": "generalPurpose", "Encrypted": true, "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}]}}, "MyEFSMountTargetAZ1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet1"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "MyEFSMountTargetAZ2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet2"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "EFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security group for EFS", "VpcId": {"Ref": "VpcId"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "2049", "ToPort": "2049", "CidrIp": "0.0.0.0/0"}]}}}, "Parameters": {"VpcId": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC ID for the EFS"}, "Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "First subnet ID for EFS mount target"}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "Second subnet ID for EFS mount target"}}, "Outputs": {"FileSystemId": {"Description": "The ID of the EFS file system", "Value": {"Ref": "MyEFSFileSystem"}}}}