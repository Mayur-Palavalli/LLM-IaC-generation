{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template for a load balanced, Auto Scaled sample website with instances locked down to only accept traffic from the load balancer", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium", "t2.large"], "ConstraintDescription": "must be a valid EC2 instance type."}, "WebsitePort": {"Description": "The port the web site will be available on", "Type": "Number", "Default": 80}, "InstancePort": {"Description": "The port the instances will listen on", "Type": "Number", "Default": 8888}, "KeyName": {"Description": "The name of the EC2 Key Pair to enable SSH access to the instances", "Type": "AWS::EC2::KeyPair::KeyName", "ConstraintDescription": "must be the name of an existing EC2 KeyPair."}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 8888 locked down to the load balancer only", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "SourceSecurityGroupId": {"Ref": "LoadBalancerSecurityGroup"}}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow HTTP access on port 80 for the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebsitePort"}, "ToPort": {"Ref": "WebsitePort"}, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"CrossZone": true, "Listeners": [{"LoadBalancerPort": {"Ref": "WebsitePort"}, "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "Scheme": "internet-facing"}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "KeyName": {"Ref": "KeyName"}, "ImageId": "ami-0abcdef1234567890", "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -ex\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n", "echo 'Hello, World!' > /var/www/html/index.html\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-12345678"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "TargetGroupARNs": [{"Ref": "LoadBalancer"}]}}}}