{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for Multi-AZ EFS with automount", "Resources": {"MyEFSFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"Encrypted": true, "ThroughputMode": "bursting", "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}], "PerformanceMode": "generalPurpose"}}, "MyMountTarget1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet1"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "MyMountTarget2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet2"}, "SecurityGroups": [{"Ref": "EFSSecurityGroup"}]}}, "EFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow NFS traffic to EFS", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 2049, "ToPort": 2049, "CidrIp": "0.0.0.0/0"}]}}}, "Parameters": {"VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC to deploy EFS in"}, "Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet1 in different AZ"}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet2 in different AZ"}}, "Outputs": {"FileSystemId": {"Description": "The ID of the EFS file system", "Value": {"Ref": "MyEFSFileSystem"}}}}