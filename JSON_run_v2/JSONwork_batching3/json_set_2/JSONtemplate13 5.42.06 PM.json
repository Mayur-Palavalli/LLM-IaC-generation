{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a multi-AZ, load balanced, auto-scaled Apache Web Server.", "Parameters": {"InstanceType": {"Description": "EC2 instance type for the web servers.", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"]}, "KeyName": {"Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances.", "Type": "AWS::EC2::KeyPair::KeyName"}, "OperatorEmail": {"Description": "The email address to send Auto Scaling notifications.", "Type": "String"}, "VpcId": {"Description": "VPC id where this infrastructure will deploy.", "Type": "AWS::EC2::VPC::Id"}, "SubnetIds": {"Description": "Subnet ids for the web server instances. To ensure high availability, select subnets in multiple AZs.", "Type": "List<AWS::EC2::Subnet::Id>"}}, "Resources": {"WebServerRole": {"Type": "AWS::IAM::Role", "Properties": {"AssumeRolePolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Principal": {"Service": ["ec2.amazonaws.com"]}, "Action": ["sts:AssumeRole"]}]}, "Policies": [{"PolicyName": "root", "PolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Action": ["ec2:Describe*", "s3:GetBucketLocation", "s3:ListAllMyBuckets", "s3:ListBucket", "s3:GetBucketPublicAccessBlock"], "Resource": "*"}]}}]}}, "WebServerProfile": {"Type": "AWS::IAM::InstanceProfile", "Properties": {"Roles": [{"Ref": "WebServerRole"}]}}, "WebServerGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": {"Ref": "SubnetIds"}, "LaunchConfigurationName": {"Ref": "WebServerLaunchConfig"}, "MinSize": "1", "MaxSize": "5", "TargetGroupARNs": [{"Ref": "WebServerTargetGroup"}], "HealthCheckType": "EC2", "HealthCheckGracePeriod": 300, "NotificationConfigurations": [{"TopicARN": {"Ref": "NotificationTopic"}, "NotificationTypes": ["autoscaling:EC2_INSTANCE_LAUNCH", "autoscaling:EC2_INSTANCE_LAUNCH_ERROR", "autoscaling:EC2_INSTANCE_TERMINATE", "autoscaling:EC2_INSTANCE_TERMINATE_ERROR"]}]}}, "WebServerLaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "KeyName": {"Ref": "KeyName"}, "IamInstanceProfile": {"Ref": "WebServerProfile"}, "UserData": {"Fn::Base64": {"Fn::Sub": "#!/bin/bash\nyum install -y httpd\nsystemctl start httpd\nsystemctl enable httpd\necho '<html><h1>Welcome to the Auto Scaled Apache Web Server</h1></html>' > /var/www/html/index.html"}}}}, "WebServerTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"HealthCheckIntervalSeconds": 30, "HealthCheckPath": "/", "HealthCheckProtocol": "HTTP", "Port": 80, "Protocol": "HTTP", "VpcId": {"Ref": "VpcId"}}}, "WebServerLoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Subnets": {"Ref": "SubnetIds"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}]}}, "WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "VpcId": {"Ref": "VpcId"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}], "SecurityGroupEgress": [{"IpProtocol": "-1", "FromPort": 0, "ToPort": 65535, "CidrIp": "0.0.0.0/0"}]}}, "NotificationTopic": {"Type": "AWS::SNS::Topic", "Properties": {"Subscription": [{"Endpoint": {"Ref": "OperatorEmail"}, "Protocol": "email"}]}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "The DNS name of the load balancer", "Value": {"Fn::GetAtt": ["WebServerLoadBalancer", "DNSName"]}}}}