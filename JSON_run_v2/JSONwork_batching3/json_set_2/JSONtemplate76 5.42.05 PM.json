{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Sample Template for EKS Cluster on EC2.", "Resources": {"MyEKSCluster": {"Type": "AWS::EKS::Cluster", "Properties": {"Name": "MyEKSCluster", "Version": "1.21", "ResourcesVpcConfig": {"SecurityGroupIds": [{"Ref": "EksClusterSecurityGroup"}], "SubnetIds": [{"Ref": "Subnet01"}, {"Ref": "Subnet02"}]}, "RoleArn": {"Fn::GetAtt": ["MyEKSRole", "Arn"]}}}, "MyEKSRole": {"Type": "AWS::IAM::Role", "Properties": {"AssumeRolePolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Principal": {"Service": "eks.amazonaws.com"}, "Action": "sts:AssumeRole"}]}, "ManagedPolicyArns": ["arn:aws:iam::aws:policy/AmazonEKSClusterPolicy", "arn:aws:iam::aws:policy/AmazonEKSServicePolicy"]}}, "EksClusterSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security Group for EKS nodes", "VpcId": {"Ref": "VpcId"}}}, "Subnet01": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "VpcId"}, "CidrBlock": "10.0.1.0/24", "AvailabilityZone": {"Fn::Select": [0, {"Fn::GetAZs": ""}]}}}, "Subnet02": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "VpcId"}, "CidrBlock": "10.0.2.0/24", "AvailabilityZone": {"Fn::Select": [1, {"Fn::GetAZs": ""}]}}}}, "Parameters": {"VpcId": {"Type": "AWS::EC2::VPC::Id", "Description": "The VPC Id that the EKS cluster and other resources will belong to."}}, "Outputs": {"ClusterName": {"Value": {"Ref": "MyEKSCluster"}, "Description": "Name of the EKS Cluster"}}}