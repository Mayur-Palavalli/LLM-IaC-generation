{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a load balanced, scalable sample website using Elastic Load Balancer and an Auto Scaling group.", "Resources": {"MySampleBucket": {"Type": "AWS::S3::Bucket", "Properties": {}}, "MySampleBucketPolicy": {"Type": "AWS::S3::BucketPolicy", "Properties": {"Bucket": {"Ref": "MySampleBucket"}, "PolicyDocument": {"Version": "2012-10-17", "Statement": [{"Action": ["s3:GetObject"], "Effect": "Allow", "Resource": {"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "MySampleBucket"}, "/*"]]}, "Principal": {"AWS": "*"}}]}}}, "MyLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"CrossZone": true, "LoadBalancerName": "MySampleELB", "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "AccessLoggingPolicy": {"EmitInterval": 5, "Enabled": true, "S3BucketName": {"Ref": "MySampleBucket"}}, "ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}}}, "WebServerGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "LaunchConfigurationName": {"Ref": "WebServerLaunchConfig"}, "MinSize": "1", "MaxSize": "3", "LoadBalancerNames": [{"Ref": "MyLoadBalancer"}]}}, "WebServerLaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": "t2.micro", "UserData": {"Fn::Base64": "#!/bin/bash\necho 'Hello World!' > /var/www/html/index.html\nservice httpd start\nchkconfig httpd on\n"}}}}, "Outputs": {"WebsiteURL": {"Description": "URL of the sample website", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["MyLoadBalancer", "DNSName"]}]]}}}}