{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template: Auto Scaling Group behind a Load Balancer with Simple Health Check and Update Policy", "Resources": {"MyLoadBalancer": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Type": "application", "Scheme": "internet-facing", "Subnets": [{"Ref": "SubnetA"}, {"Ref": "SubnetB"}]}}, "Listener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "TargetGroup"}}], "LoadBalancerArn": {"Ref": "MyLoadBalancer"}, "Port": 80, "Protocol": "HTTP"}}, "TargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"HealthCheckIntervalSeconds": 30, "HealthCheckPath": "/ping", "HealthCheckProtocol": "HTTP", "HealthCheckTimeoutSeconds": 5, "HealthyThresholdCount": 3, "Matcher": {"HttpCode": "200"}, "Port": 80, "Protocol": "HTTP", "TargetType": "instance", "UnhealthyThresholdCount": 5, "VpcId": {"Ref": "VPC"}}}, "LaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "InstanceSecurityGroup"}]}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"LaunchConfigurationName": {"Ref": "LaunchConfig"}, "MinSize": "2", "MaxSize": "5", "DesiredCapacity": "2", "TargetGroupARNs": [{"Ref": "TargetGroup"}], "VPCZoneIdentifier": ["SubnetA", "SubnetB"], "HealthCheckType": "ELB", "HealthCheckGracePeriod": 300}, "UpdatePolicy": {"AutoScalingRollingUpdate": {"MaxBatchSize": 1, "MinInstancesInService": 1, "PauseTime": "PT5M", "WaitOnResourceSignals": true}}, "DeletionPolicy": "Retain", "UpdateReplacePolicy": "Retain"}, "InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}}}