{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyDBInstance": {"Type": "AWS::RDS::DBInstance", "Properties": {"DBInstanceClass": "db.t3.micro", "Engine": "mysql", "MasterUsername": {"Ref": "DBUsername"}, "MasterUserPassword": {"Fn::Sub": "{{resolve:ssm-secure:${DBPassword}}}"}, "AllocatedStorage": "20", "DBInstanceIdentifier": "mydbinstance"}, "DeletionPolicy": "Snapshot", "UpdateReplacePolicy": "Snapshot"}}, "Parameters": {"DBUsername": {"Type": "String", "Description": "The database admin account username", "MinLength": "1", "MaxLength": "16", "AllowedPattern": "[a-zA-Z][a-zA-Z0-9]*", "ConstraintDescription": "Must begin with a letter and contain only alphanumeric characters."}, "DBPassword": {"Type": "AWS::SSM::Parameter::Value<String>", "Description": "The database admin account password stored in SSM Parameter Store", "NoEcho": true}}}