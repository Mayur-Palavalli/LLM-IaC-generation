{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a scalable, load balanced website with ELB and Auto Scaling.", "Resources": {"WebAppLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"LoadBalancerName": "WebAppLB", "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}, "AccessLoggingPolicy": {"Enabled": true, "S3BucketName": "WebAppLogsBucket", "EmitInterval": 5}, "CrossZone": true, "Subnets": [{"Ref": "SubnetA"}, {"Ref": "SubnetB"}], "SecurityGroups": [{"Ref": "ELBSecurityGroup"}]}}, "WebAppAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "LaunchConfigurationName": {"Ref": "WebAppLaunchConfig"}, "MinSize": "1", "MaxSize": "5", "DesiredCapacity": "3", "LoadBalancerNames": [{"Ref": "WebAppLoadBalancer"}], "HealthCheckType": "ELB", "HealthCheckGracePeriod": 300, "Tags": [{"Key": "Name", "Value": "WebAppInstance", "PropagateAtLaunch": true}]}}, "WebAppLaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "InstanceSecurityGroup"}]}}, "LogsBucket": {"Type": "AWS::S3::Bucket", "Properties": {"BucketName": "WebAppLogsBucket", "LifecycleConfiguration": {"Rules": [{"Id": "LogDeletionRule", "Status": "Enabled", "ExpirationInDays": 365, "Prefix": "logs/"}]}}}, "ELBSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow HTTP access to ELB", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}]}}, "InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow HTTP from ELB", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "SourceSecurityGroupName": {"Ref": "ELBSecurityGroup"}}]}}}, "Parameters": {"SubnetA": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet A"}, "SubnetB": {"Type": "AWS::EC2::Subnet::Id", "Description": "Subnet B"}}}