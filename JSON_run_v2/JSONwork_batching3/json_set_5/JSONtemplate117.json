{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS IoT Analytics Pipeline with Channel, Datastore, Pipeline, and Dataset with SQL action", "Resources": {"MyChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"NumberOfDays": 7}}}, "MyDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore", "RetentionPeriod": {"NumberOfDays": 7}}}, "MyPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "ChannelActivity", "ChannelName": {"Ref": "MyChannel"}, "Next": "DatastoreActivity"}}, {"Datastore": {"Name": "DatastoreActivity", "DatastoreName": {"Ref": "MyDatastore"}}}]}}, "MyDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "Actions": [{"ActionName": "SQLQueryAction", "QueryAction": {"SqlQuery": "SELECT * FROM CHANNEL(\"MyChannel\")", "Filters": []}}], "Triggers": [{"Schedule": {"ScheduleExpression": "rate(1 hour)"}}]}}}, "Outputs": {"ChannelName": {"Description": "Name of the IoT Analytics Channel", "Value": {"Ref": "MyChannel"}}, "DatastoreName": {"Description": "Name of the IoT Analytics Datastore", "Value": {"Ref": "MyDatastore"}}, "PipelineName": {"Description": "Name of the IoT Analytics Pipeline", "Value": {"Ref": "MyPipeline"}}, "DatasetName": {"Description": "Name of the IoT Analytics Dataset", "Value": {"Ref": "MyDataset"}}}}