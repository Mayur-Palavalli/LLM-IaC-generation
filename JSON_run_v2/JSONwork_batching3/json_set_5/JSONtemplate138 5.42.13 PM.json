{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyDatabase": {"Type": "AWS::RDS::DBInstance", "Properties": {"DBInstanceClass": "db.t2.micro", "AllocatedStorage": "20", "Engine": "mysql", "MasterUsername": {"Ref": "DBUsername"}, "MasterUserPassword": {"Fn::Sub": "{{resolve:secretsmanager:${MySecretKey}:SecretString:password}}"}}}, "MyDBParameterGroup": {"Type": "AWS::RDS::DBParameterGroup", "Properties": {"Description": "Custom parameter group for my database", "Family": "mysql5.7", "Parameters": {"character_set_server": "utf8mb4"}}}}, "Parameters": {"DBUsername": {"Type": "String", "Description": "The master username for the DB instance."}, "MySecretKey": {"Type": "String", "Default": "my-secret-key-id", "Description": "The ID of the secret key for the DB password in Secrets Manager."}}}