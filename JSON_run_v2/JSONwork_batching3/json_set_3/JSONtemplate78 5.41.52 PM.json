{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Sample Template to create an Amazon EKS Cluster with EC2 node groups.", "Resources": {"MyEksCluster": {"Type": "AWS::EKS::Cluster", "Properties": {"Name": "MyEKSCluster", "Version": "1.21", "RoleArn": {"Fn::GetAtt": ["EksClusterRole", "Arn"]}, "ResourcesVpcConfig": {"SecurityGroupIds": [{"Ref": "EksClusterSecurityGroup"}], "SubnetIds": {"Fn::Split": [",", {"Fn::Join": [",", {"Ref": "SubnetIds"}]}]}}}}, "EksClusterRole": {"Type": "AWS::IAM::Role", "Properties": {"AssumeRolePolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Principal": {"Service": "eks.amazonaws.com"}, "Action": "sts:AssumeRole"}]}, "Path": "/", "Policies": [{"PolicyName": "AmazonEKSClusterPolicy", "PolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Action": ["ec2:Describe*", "eks:DescribeCluster", "eks:ListClusters"], "Resource": "*"}]}}]}}, "EksClusterSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupName": "MyEksClusterSecurityGroup", "GroupDescription": "Security Group for EKS cluster", "VpcId": {"Ref": "VpcId"}}}, "EksNodeGroup": {"Type": "AWS::EKS::Nodegroup", "Properties": {"ClusterName": {"Ref": "MyEksCluster"}, "NodeRole": {"Fn::GetAtt": ["EksNodeGroupRole", "Arn"]}, "Subnets": {"Fn::Split": [",", {"Fn::Join": [",", {"Ref": "SubnetIds"}]}]}, "ScalingConfig": {"MinSize": 1, "MaxSize": 3, "DesiredSize": 2}}}, "EksNodeGroupRole": {"Type": "AWS::IAM::Role", "Properties": {"AssumeRolePolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Principal": {"Service": "ec2.amazonaws.com"}, "Action": "sts:AssumeRole"}]}, "Path": "/", "Policies": [{"PolicyName": "AmazonEKSWorkerNodePolicy", "PolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Action": ["ec2:Describe*", "ec2:Get*", "eks:Describe*", "cloudwatch:PutMetricData"], "Resource": "*"}]}}]}}}, "Parameters": {"VpcId": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC Id for the EKS Cluster."}, "SubnetIds": {"Type": "List<AWS::EC2::Subnet::Id>", "Description": "Subnet Ids where the EKS Node Groups will be created."}}, "Outputs": {"ClusterName": {"Description": "The name of the EKS Cluster", "Value": {"Ref": "MyEksCluster"}}}}