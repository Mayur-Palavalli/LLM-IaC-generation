{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for setting up two EC2 instances behind a load balancer.", "Parameters": {"VpcId": {"Type": "AWS::EC2::VPC::Id", "Description": "The VPC ID where the resources will be deployed."}, "SubnetIds": {"Type": "List<AWS::EC2::Subnet::Id>", "Description": "The subnet IDs for the instances, can be one or more in different availability zones."}, "InstanceType": {"Type": "String", "Default": "t2.micro", "Description": "EC2 instance type", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"]}, "KeyName": {"Type": "AWS::EC2::KeyPair::KeyName", "Description": "Name of an existing EC2 KeyPair to enable SSH access to the EC2 instances"}, "InstancePort": {"Type": "Number", "Default": 80, "Description": "The port on which the EC2 instance is configured to listen"}}, "Resources": {"MyEC2SecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "VpcId": {"Ref": "VpcId"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "MyLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Listeners": [{"LoadBalancerPort": 80, "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": 3, "UnhealthyThreshold": 5, "Interval": 30, "Timeout": 5}, "Subnets": {"Ref": "SubnetIds"}}}, "Instance1": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "MyEC2SecurityGroup"}], "KeyName": {"Ref": "KeyName"}, "ImageId": "ami-0abcdef1234567890", "SubnetId": {"Fn::Select": ["0", {"Ref": "SubnetIds"}]}}}, "Instance2": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "MyEC2SecurityGroup"}], "KeyName": {"Ref": "KeyName"}, "ImageId": "ami-0abcdef1234567890", "SubnetId": {"Fn::Select": ["1", {"Ref": "SubnetIds"}]}}}}, "Outputs": {"LoadBalancerDNS": {"Description": "DNS Name of the load balancer", "Value": {"Fn::GetAtt": ["MyLoadBalancer", "DNSName"]}}}}