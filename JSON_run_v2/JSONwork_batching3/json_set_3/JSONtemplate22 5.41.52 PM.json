{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template: Auto-scaled, load balanced web application.", "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "ElasticLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Listeners": [{"LoadBalancerPort": 80, "InstancePort": 80, "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-043a5034df9a9f2f0", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "UserData": {"Fn::Base64": "#!/bin/bash\nyum install -y httpd\nchkconfig httpd on\nservice httpd start\necho '<html><head><title>AWS CloudFormation Sample</title></head><body><h1>Welcome to the AWS CloudFormation Sample</h1></body></html>' > /var/www/html/index.html"}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "2", "LoadBalancerNames": [{"Ref": "ElasticLoadBalancer"}], "AvailabilityZones": {"Fn::GetAZs": ""}}}, "ScheduledActionIncrease": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "AutoScalingGroup"}, "MaxSize": 3, "MinSize": 2, "DesiredCapacity": 3, "Recurrence": "0 0 * * *"}}, "ScheduledActionDecrease": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "AutoScalingGroup"}, "MaxSize": 3, "MinSize": 1, "DesiredCapacity": 1, "Recurrence": "0 23 * * *"}}}}