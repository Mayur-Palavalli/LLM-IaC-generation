{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for an RDS DBInstance with snapshot on deletion.", "Resources": {"MyDBInstance": {"Type": "AWS::RDS::DBInstance", "DeletionPolicy": "Snapshot", "Properties": {"DBInstanceClass": "db.t2.small", "Engine": "MySQL", "MasterUsername": "adminuser", "MasterUserPassword": {"Ref": "DBPassword"}, "AllocatedStorage": "20", "DBSnapshotIdentifier": {"Ref": "AWS::NoValue"}}}}, "Outputs": {"DbInstanceEndpoint": {"Description": "The database endpoint", "Value": {"Fn::GetAtt": ["MyDBInstance", "Endpoint.Address"]}}}, "Parameters": {"DBPassword": {"Description": "The database admin password", "Type": "String", "NoEcho": true}}}