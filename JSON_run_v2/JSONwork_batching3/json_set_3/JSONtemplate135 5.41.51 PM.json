{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a snapshotted RDS DBInstance upon stack deletion.", "Resources": {"MyDBInstance": {"Type": "AWS::RDS::DBInstance", "Properties": {"DBInstanceClass": "db.t3.micro", "AllocatedStorage": "20", "Engine": "mysql", "MasterUsername": "adminuser", "MasterUserPassword": {"Ref": "MyDBPassword"}, "DBSnapshotIdentifier": {"Ref": "AWS::NoValue"}, "DBName": "MyDatabase", "BackupRetentionPeriod": "0"}, "DeletionPolicy": "Snapshot", "UpdateReplacePolicy": "Snapshot"}}, "Parameters": {"MyDBPassword": {"Type": "String", "NoEcho": true, "Description": "Master user password for RDS instance."}}}