{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyEFSFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"PerformanceMode": "generalPurpose", "Encrypted": true, "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}]}}, "MyEFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security Group for EFS", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 2049, "ToPort": 2049, "CidrIp": "0.0.0.0/0"}]}}, "MountTarget1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet1"}, "SecurityGroups": [{"Fn::GetAtt": ["MyEFSSecurityGroup", "GroupId"]}]}}, "MountTarget2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyEFSFileSystem"}, "SubnetId": {"Ref": "Subnet2"}, "SecurityGroups": [{"Fn::GetAtt": ["MyEFSSecurityGroup", "GroupId"]}]}}}, "Parameters": {"VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC to deploy EFS in"}, "Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "First subnet for EFS mount target"}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "Second subnet for EFS mount target"}}, "Outputs": {"FileSystemId": {"Description": "File System ID", "Value": {"Ref": "MyEFSFileSystem"}}}}