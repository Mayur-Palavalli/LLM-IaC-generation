{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Sample Template for an Amazon EC2 instance with Amazon Linux AMI and SSH access.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "must be a valid EC2 instance type."}}, "Mappings": {"AWSRegionToAMI": {"us-east-1": {"AMI": "ami-0c55b159cbfafe1f0"}, "us-west-1": {"AMI": "ami-0bdb828fd58c52235"}, "us-west-2": {"AMI": "ami-0bbe6b35405ecebdb"}, "eu-west-1": {"AMI": "ami-047bb4163c506cd98"}, "eu-central-1": {"AMI": "ami-031b2d35a5b1fefc3"}}}, "Resources": {"EC2Instance": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "ImageId": {"Fn::FindInMap": ["AWSRegionToAMI", {"Ref": "AWS::Region"}, "AMI"]}, "SecurityGroups": [{"Ref": "InstanceSecurityGroup"}]}}, "InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable SSH access via port 22", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": "0.0.0.0/0"}]}}}, "Outputs": {"InstanceId": {"Description": "The Instance ID", "Value": {"Ref": "EC2Instance"}}}}