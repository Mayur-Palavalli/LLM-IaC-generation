{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template to create an Amazon EC2 instance running Amazon Linux AMI and an EC2 Security Group for SSH access.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "must be a valid EC2 instance type."}}, "Mappings": {"AWSRegionToAMI": {"us-east-1": {"AMI": "ami-0c55b159cbfafe1f0"}, "us-west-1": {"AMI": "ami-0bdb828fd58c52235"}, "us-west-2": {"AMI": "ami-0e34e7b9ca0ace12d"}, "eu-west-1": {"AMI": "ami-047bb4163c506cd98"}, "eu-central-1": {"AMI": "ami-03cf127a"}, "ap-southeast-1": {"AMI": "ami-0854033442"}, "ap-northeast-1": {"AMI": "ami-06cd52961"}, "ap-southeast-2": {"AMI": "ami-0c55b159cbfafe1f0"}}}, "Resources": {"Ec2SecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable SSH access via port 22", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": "0.0.0.0/0"}]}}, "Ec2Instance": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroupIds": [{"Fn::GetAtt": ["Ec2SecurityGroup", "GroupId"]}], "ImageId": {"Fn::FindInMap": ["AWSRegionToAMI", {"Ref": "AWS::Region"}, "AMI"]}}}}, "Outputs": {"InstanceId": {"Description": "The Instance ID", "Value": {"Ref": "Ec2Instance"}}, "PublicIP": {"Description": "The Public IP of the EC2 instance", "Value": {"Fn::GetAtt": ["Ec2Instance", "PublicIp"]}}, "AZ": {"Description": "The Availability Zone", "Value": {"Fn::GetAtt": ["Ec2Instance", "AvailabilityZone"]}}}}