{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"BackupPolicy": {"Status": "ENABLED"}, "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}], "PerformanceMode": "generalPurpose", "ThroughputMode": "bursting"}}, "MyMountTarget1A": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyFileSystem"}, "SubnetId": {"Ref": "MySubnet1A"}, "SecurityGroups": [{"Ref": "MyEFSSecurityGroup"}]}}, "MyMountTarget1B": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "MyFileSystem"}, "SubnetId": {"Ref": "MySubnet1B"}, "SecurityGroups": [{"Ref": "MyEFSSecurityGroup"}]}}, "MyEFSSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow access to EFS", "VpcId": {"Ref": "MyVPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 2049, "ToPort": 2049, "CidrIp": "0.0.0.0/0"}]}}, "MyVPC": {"Type": "AWS::EC2::VPC", "Properties": {"CidrBlock": "10.0.0.0/16"}}, "MySubnet1A": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "MyVPC"}, "CidrBlock": "10.0.1.0/24", "AvailabilityZone": {"Fn::Select": [0, {"Fn::GetAZs": {"Ref": "AWS::Region"}}]}}}, "MySubnet1B": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "MyVPC"}, "CidrBlock": "10.0.2.0/24", "AvailabilityZone": {"Fn::Select": [1, {"Fn::GetAZs": {"Ref": "AWS::Region"}}]}}}}, "Outputs": {"FileSystemId": {"Value": {"Ref": "MyFileSystem"}}, "FileSystemArn": {"Value": {"Fn::GetAtt": ["MyFileSystem", "Arn"]}}}}