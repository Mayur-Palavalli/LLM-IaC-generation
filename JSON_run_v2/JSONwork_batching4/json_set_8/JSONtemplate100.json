{"AWSTemplateFormatVersion": "2010-09-09", "Description": "Load balanced, Auto Scaled sample website", "Parameters": {"InstancePort": {"Type": "Number", "Default": 8888, "Description": "The port on the instances to listen to"}, "KeyName": {"Type": "AWS::EC2::KeyPair::KeyName", "Description": "Existing AWS KeyPair to enable SSH access to the instances"}}, "Resources": {"WebAppSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the web servers", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "ElasticLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "Instances": []}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"KeyName": {"Ref": "KeyName"}, "SecurityGroups": [{"Ref": "WebAppSecurityGroup"}], "InstanceType": "t2.micro", "ImageId": "ami-0c55b159cbfafe1f0", "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n", "echo '<html><body><h1>Hello from the web server</h1></body></html>' > /var/www/html/index.html\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-abcdef12"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, 