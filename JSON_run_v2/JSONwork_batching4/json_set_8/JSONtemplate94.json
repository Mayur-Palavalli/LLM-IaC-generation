{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to launch two EC2 instances behind a Load Balancer with a simple health check", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "Must be a valid EC2 instance type."}, "VpcId": {"Description": "VPC Id", "Type": "AWS::EC2::VPC::Id"}, "SubnetIds": {"Description": "Subnet Ids", "Type": "List<AWS::EC2::Subnet::Id>"}, "InstancePort": {"Description": "Port on which the instances will listen", "Type": "Number", "Default": 8888}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access on the configured port", "VpcId": {"Ref": "VpcId"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Subnets": {"Ref": "SubnetIds"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Fn::GetAtt": ["WebServerInstance1", "PrivateDnsName"]}, ":", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}}}, "WebServerInstance1": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroupIds": [{"Ref": "WebServerSecurityGroup"}], "SubnetId": {"Fn::Select": ["0", {"Ref": "SubnetIds"}]}, "ImageId": "ami-0c55b159cbfafe1f0", "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n"]]}}}}, "WebServerInstance2": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroupIds": [{"Ref": "WebServerSecurityGroup"}], "SubnetId": {"Fn::Select": ["1", {"Ref": "SubnetIds"}]}, "ImageId": "ami-0c55b159cbfafe1f0", "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n"]]}}}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS Name of the load balancer", "Value": {"Fn::GetAtt": ["LoadBalancer", "DNSName"]}}}}