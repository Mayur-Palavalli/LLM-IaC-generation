{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"IoTAnalyticsChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"NumberOfDays": 7, "Unlimited": false}}}, "IoTAnalyticsDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore", "RetentionPeriod": {"NumberOfDays": 14, "Unlimited": false}}}, "IoTAnalyticsPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "ChannelActivity", "ChannelName": {"Ref": "IoTAnalyticsChannel"}, "Next": "SQLQueryActivity"}}, {"SelectAttributes": {"Name": "SQLQueryActivity", "Next": "DatastoreActivity", "Attributes": ["temperature", "humidity"]}}, {"Datastore": {"Name": "DatastoreActivity", "DatastoreName": {"Ref": "IoTAnalyticsDatastore"}}}]}}, "IoTAnalyticsDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "Actions": [{"ActionName": "SQLAction", "QueryAction": {"SqlQuery": "SELECT * FROM MyDatastore WHERE temperature > 30"}}], "ContentDeliveryRules": [{"Destination": {"IotEventsDestinationConfiguration": {"InputName": {"Ref": "IoTAnalyticsChannel"}}}}], "RetentionPeriod": {"NumberOfDays": 30, "Unlimited": false}}}}}