{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create PrivateLink infrastructure", "Resources": {"VPC": {"Type": "AWS::EC2::VPC", "Properties": {"CidrBlock": "10.0.0.0/16", "EnableDnsSupport": true, "EnableDnsHostnames": true, "Tags": [{"Key": "Name", "Value": "PrivatelinkVPC"}]}}, "Subnet": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "VPC"}, "CidrBlock": "10.0.1.0/24", "AvailabilityZone": {"Fn::Select": [0, {"Fn::GetAZs": {"Ref": "AWS::Region"}}]}, "Tags": [{"Key": "Name", "Value": "PrivatelinkSubnet"}]}}, "ServiceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security group for PrivateLink service", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "10.0.0.0/16"}], "Tags": [{"Key": "Name", "Value": "PrivatelinkServiceSG"}]}}, "NLB": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Type": "network", "Subnets": [{"Ref": "Subnet"}], "Scheme": "internal"}}, "NLBTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"VpcId": {"Ref": "VPC"}, "Port": 80, "Protocol": "TCP", "HealthCheckProtocol": "TCP", "HealthCheckPort": "80"}}, "NLBListener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"LoadBalancerArn": {"Ref": "NLB"}, "Port": 80, "Protocol": "TCP", "DefaultActions": [{"Type": "forward", "TargetGroupArn": {"Ref": "NLBTargetGroup"}}]}}, "EndpointService": {"Type": "AWS::EC2::VPCEndpointService", "Properties": {"NetworkLoadBalancerArns": [{"Ref": "NLB"}], "AcceptanceRequired": false}}, "VpcEndpoint": {"Type": "AWS::EC2::VPCEndpoint", "Properties": {"ServiceName": {"Fn::Join": ["", ["com.amazonaws.vpce.", {"Ref": "AWS::Region"}, ".", {"Fn::GetAtt": ["EndpointService", "ServiceId"]}]]}, "VpcId": {"Ref": "VPC"}, "VpcEndpointType": "Interface", "SubnetIds": [{"Ref": "Subnet"}], "SecurityGroupIds": [{"Ref": "ServiceSecurityGroup"}]}}}, "Outputs": {"ServiceName": {"Description": "Name of the VPC Endpoint Service", "Value": {"Fn::GetAtt": ["EndpointService", "ServiceName"]}}, "NLBArn": {"Description": "ARN of the Network Load Balancer", "Value": {"Ref": "NLB"}}, "VPCEndpointId": {"Description": "ID of the VPC Endpoint", "Value": {"Ref": "VpcEndpoint"}}}}