{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a load balanced, Auto Scaled sample website.", "Parameters": {"InstanceType": {"Description": "WebServer EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium", "t2.large"], "ConstraintDescription": "must be a valid EC2 instance type."}, "WebServerPort": {"Description": "The port the web server is running on", "Type": "Number", "Default": 8888}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access only from the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebServerPort"}, "ToPort": {"Ref": "WebServerPort"}, "SourceSecurityGroupId": {"Fn::GetAtt": ["LoadBalancerSecurityGroup", "GroupId"]}}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow HTTP traffic to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "WebServerPort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "WebServerPort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "Subnets": ["subnet-0123456789abcdef0"]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "ImageId": "ami-a4c7edb2", "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}]}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-0123456789abcdef0"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "TargetGroupARNs": [{"Ref": "ApplicationTargetGroup"}]}}, "ApplicationTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"Port": {"Ref": "WebServerPort"}, "Protocol": "HTTP", "VpcId": "vpc-0123456789abcdef0", "HealthCheckIntervalSeconds": 30, "HealthCheckTimeoutSeconds": 5, "HealthyThresholdCount": 5, "UnhealthyThresholdCount": 2, "TargetType": "instance"}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "The DNS name of the load balancer", "Value": {"Fn::GetAtt": ["LoadBalancer", "DNSName"]}}}}