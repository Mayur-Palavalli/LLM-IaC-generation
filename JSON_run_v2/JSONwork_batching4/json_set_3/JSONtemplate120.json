{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"NumberOfDays": 7, "Unlimited": false}, "Tags": [{"Key": "Environment", "Value": "Production"}]}}, "MyDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore", "RetentionPeriod": {"NumberOfDays": 7, "Unlimited": false}, "Tags": [{"Key": "Environment", "Value": "Production"}]}}, "MyPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "ChannelActivity", "ChannelName": {"Ref": "MyChannel"}, "Next": "DatastoreActivity"}}, {"Datastore": {"Name": "DatastoreActivity", "DatastoreName": {"Ref": "MyDatastore"}}}], "Tags": [{"Key": "Environment", "Value": "Production"}]}}, "MyDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "Actions": [{"ActionName": "SqlQueryAction", "QueryAction": {"SqlQuery": "SELECT * FROM MyDatastore WHERE temperature > 25", "Filters": []}}], "Triggers": [], "Tags": [{"Key": "Environment", "Value": "Production"}]}}}}