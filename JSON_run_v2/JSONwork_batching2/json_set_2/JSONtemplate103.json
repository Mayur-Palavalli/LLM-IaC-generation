{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template for a load balanced, scalable sample website using Elastic Load Balancer (ELB) attached to an Auto Scaling Group (ASG) with connection draining enabled and access logs into an S3 bucket", "Resources": {"SampleS3BucketForLogs": {"Type": "AWS::S3::Bucket"}, "SampleLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "Listeners": [{"InstancePort": "80", "LoadBalancerPort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}, "AccessLoggingPolicy": {"Enabled": true, "S3BucketName": {"Ref": "SampleS3BucketForLogs"}, "EmitInterval": 5, "S3BucketPrefix": "ELB-Access-Logs/"}}}, "SampleLaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "SampleInstanceSecurityGroup"}], "UserData": {"Fn::Base64": "#!/bin/bash\n yum update -y\n yum install -y httpd\nservice httpd start\necho \"<h1>Sample Web Server</h1>\" > /var/www/html/index.html"}}}, "SampleInstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}]}}, "SampleAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "LaunchConfigurationName": {"Ref": "SampleLaunchConfiguration"}, "MinSize": "1", "MaxSize": "5", "DesiredCapacity": "2", "LoadBalancerNames": [{"Ref": "SampleLoadBalancer"}], "TargetGroupARNs": [], "HealthCheckType": "EC2", "HealthCheckGracePeriod": 300, "VPCZoneIdentifier": []}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS Name of the load balancer", "Value": {"Fn::GetAtt": ["SampleLoadBalancer", "DNSName"]}}}}