{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"SampleBucket": {"Type": "AWS::S3::Bucket"}, "SampleBucketPolicy": {"Type": "AWS::S3::BucketPolicy", "Properties": {"Bucket": {"Ref": "SampleBucket"}, "PolicyDocument": {"Version": "2012-10-17", "Statement": [{"Effect": "Allow", "Principal": {"Service": "elasticloadbalancing.amazonaws.com"}, "Action": "s3:PutObject", "Resource": {"Fn::Join": ["", ["arn:aws:s3:::", {"Ref": "SampleBucket"}, "/*"]]}}]}}}, "SampleLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/index.html", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}, "AccessLoggingPolicy": {"Enabled": true, "S3BucketName": {"Ref": "SampleBucket"}, "EmitInterval": 5, "S3BucketPrefix": "ELB-Logs"}}}, "SampleLaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": "t2.micro"}}, "SampleAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"LaunchConfigurationName": {"Ref": "SampleLaunchConfiguration"}, "MinSize": "1", "MaxSize": "5", "DesiredCapacity": "2", "VPCZoneIdentifier": ["subnet-0123456789abcdef0"], "TargetGroupARNs": [{"Ref": "SampleTargetGroup"}]}}, "SampleTargetGroup": {"Type": "AWS::ElasticLoadBalancingV2::TargetGroup", "Properties": {"HealthCheckIntervalSeconds": 30, "HealthCheckPath": "/", "HealthCheckProtocol": "HTTP", "HealthCheckTimeoutSeconds": 5, "HealthyThresholdCount": 3, "UnhealthyThresholdCount": 5, "VpcId": "vpc-12345678", "Port": 80, "Protocol": "HTTP"}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS name of the load balancer", "Value": {"Fn::GetAtt": ["SampleLoadBalancer", "DNSName"]}}}}