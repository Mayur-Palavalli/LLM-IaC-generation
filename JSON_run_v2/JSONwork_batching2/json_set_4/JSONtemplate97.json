{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template to create a load balanced, Auto Scaled sample website where instances only accept traffic from the load balancer.", "Parameters": {"InstancePort": {"Description": "The port on which the instance is running (default 8888)", "Type": "Number", "Default": 8888}, "WebServerPort": {"Description": "The port to access the web server", "Type": "Number", "Default": 80}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80 locked down to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "SourceSecurityGroupId": {"Ref": "LoadBalancerSecurityGroup"}}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow HTTP traffic from anywhere", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebServerPort"}, "ToPort": {"Ref": "WebServerPort"}, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Listeners": [{"LoadBalancerPort": {"Ref": "WebServerPort"}, "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "CrossZone": "true", "Subnets": ["subnet-abcdef12", "subnet-bcdefa34"]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}]}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"AvailabilityZones": {"Fn::GetAZs": ""}, "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "VPCZoneIdentifier": ["subnet-abcdef12", "subnet-bcdefa34"]}, "CreationPolicy": {"ResourceSignal": {"Timeout": "PT15M"}}}}, "Outputs": {"URL": {"Description": "The URL of the website", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["LoadBalancer", "DNSName"]}]]}}}}