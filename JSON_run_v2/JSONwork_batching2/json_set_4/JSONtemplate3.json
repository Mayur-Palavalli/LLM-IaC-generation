{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create AWS PrivateLink infrastructure", "Resources": {"VPC": {"Type": "AWS::EC2::VPC", "Properties": {"CidrBlock": "10.0.0.0/16", "EnableDnsSupport": true, "EnableDnsHostnames": true, "Tags": [{"Key": "Name", "Value": "PrivateLinkVPC"}]}}, "Subnet": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "VPC"}, "CidrBlock": "10.0.1.0/24", "AvailabilityZone": {"Fn::Select": ["0", {"Fn::GetAZs": {"Ref": "AWS::Region"}}]}, "Tags": [{"Key": "Name", "Value": "PrivateLinkSubnet"}]}}, "SecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Allow traffic for PrivateLink", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 443, "ToPort": 443, "CidrIp": "0.0.0.0/0"}], "Tags": [{"Key": "Name", "Value": "PrivateLinkSG"}]}}, "NLB": {"Type": "AWS::ElasticLoadBalancingV2::LoadBalancer", "Properties": {"Name": "PrivateLinkNLB", "Subnets": [{"Ref": "Subnet"}], "Type": "network", "Scheme": "internal", "LoadBalancerAttributes": [{"Key": "access_logs.s3.enabled", "Value": "false"}], "Tags": [{"Key": "Name", "Value": "PrivateLinkNLB"}]}}, "NLBListener": {"Type": "AWS::ElasticLoadBalancingV2::Listener", "Properties": {"DefaultActions": [{"Type": "fixed-response", "FixedResponseConfig": {"MessageBody": "OK", "StatusCode": "200", "ContentType": "text/plain"}}], "LoadBalancerArn": {"Ref": "NLB"}, "Port": 443, "Protocol": "TCP"}}, "VPCEndpointService": {"Type": "AWS::EC2::VPCEndpointService", "Properties": {"NetworkLoadBalancerArns": [{"Ref": "NLB"}], "AcceptanceRequired": false}}}, "Outputs": {"VPCId": {"Description": "The VPC ID", "Value": {"Ref": "VPC"}}, "SubnetId": {"Description": "The Subnet ID", "Value": {"Ref": "Subnet"}}, "SecurityGroupId": {"Description": "The Security Group ID", "Value": {"Ref": "SecurityGroup"}}, "NetworkLoadBalancerDNS": {"Description": "The DNS name of the Network Load Balancer", "Value": {"Fn::GetAtt": ["NLB", "DNSName"]}}, "ServiceId": {"Description": "The ID of the VPC Endpoint Service", "Value": {"Fn::GetAtt": ["VPCEndpointService", "ServiceId"]}}}}