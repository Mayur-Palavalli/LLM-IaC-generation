{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template for a load balanced, Auto Scaled sample website where the instances are locked down to only accept traffic from the load balancer.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium", "t2.large"], "ConstraintDescription": "must be a valid EC2 instance type."}, "InstancePort": {"Description": "The port on which the instance is listening", "Type": "Number", "Default": 8888}, "WebSitePort": {"Description": "The port on which the web site will be available", "Type": "Number", "Default": 80}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security group for web server instance(s)", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "SourceSecurityGroupId": {"Ref": "LoadBalancerSecurityGroup"}}]}}, "LoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Security group for load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebSitePort"}, "ToPort": {"Ref": "WebSitePort"}, "CidrIp": "0.0.0.0/0"}]}}, "LoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"SecurityGroups": [{"Ref": "LoadBalancerSecurityGroup"}], "Listeners": [{"LoadBalancerPort": {"Ref": "WebSitePort"}, "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "CrossZone": "true", "Subnets": ["subnet-0bb1c79de3EXAMPLE", "subnet-0bb1c79de4EXAMPLE"]}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0abcdef1234567890", "InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum install -y httpd\n", "echo '<html><body><h1>Sample Website</h1></body></html>' > /var/www/html/index.html\n", "service httpd start\n", "chkconfig httpd on\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-0bb1c79de3EXAMPLE", "subnet-0bb1c79de4EXAMPLE"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "TargetGroupARNs": [], "LoadBalancerNames": [{"Ref": "LoadBalancer"}], "HealthCheckType": "ELB", "HealthCheckGracePeriod": 300}}}, "Outputs": {"URL": {"Description": "The URL of the load balancer", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["LoadBalancer", "DNSName"]}]]}}}}