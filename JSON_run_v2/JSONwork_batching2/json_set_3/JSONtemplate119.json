{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"NumberOfDays": 14, "Unlimited": false}}}, "MyDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore", "RetentionPeriod": {"NumberOfDays": 14, "Unlimited": false}}}, "MyPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "ChannelActivity", "ChannelName": {"Ref": "MyChannel"}, "Next": "LambdaActivity"}}, {"Lambda": {"Name": "LambdaActivity", "LambdaName": "MyLambdaFunction", "BatchSize": 100, "Next": "SQLActivity"}}, {"SelectAttributes": {"Name": "SQLActivity", "Attributes": ["*"], "Next": "DatastoreActivity"}}, {"Datastore": {"Name": "DatastoreActivity", "DatastoreName": {"Ref": "MyDatastore"}}}]}}, "MyDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "Actions": [{"ActionName": "SQL_Action", "QueryAction": {"SqlQuery": "SELECT * FROM MyPipeline WHERE temperature > 25"}}], "Triggers": [{"Schedule": {"ScheduleExpression": "cron(0 12 * * ? *)"}}]}}}}