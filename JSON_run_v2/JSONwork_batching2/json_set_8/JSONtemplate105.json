{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template to create a Load Balanced, Scalable Sample Website using Elastic Load Balancer and Auto Scaling Group.", "Resources": {"SampleWebsiteBucket": {"Type": "AWS::S3::Bucket", "Properties": {"BucketName": "sample-website-access-logs"}}, "SampleWebsiteLB": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"ConnectionDrainingPolicy": {"Enabled": true, "Timeout": 300}, "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "AccessLoggingPolicy": {"Enabled": true, "S3BucketName": {"Ref": "SampleWebsiteBucket"}, "EmitInterval": 5}, "AvailabilityZones": {"Fn::GetAZs": ""}}}, "SampleWebsiteLaunchConfig": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "SampleWebsiteSecurityGroup"}]}}, "SampleWebsiteAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": [{"Ref": "SampleWebsiteSubnet"}], "LaunchConfigurationName": {"Ref": "SampleWebsiteLaunchConfig"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1"}}, "SampleWebsiteSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}], "VpcId": {"Ref": "SampleWebsiteVPC"}}}, "SampleWebsiteVPC": {"Type": "AWS::EC2::VPC", "Properties": {"CidrBlock": "10.0.0.0/16"}}, "SampleWebsiteSubnet": {"Type": "AWS::EC2::Subnet", "Properties": {"VpcId": {"Ref": "SampleWebsiteVPC"}, "CidrBlock": "10.0.1.0/24", "AvailabilityZone": {"Fn::Select": ["0", {"Fn::GetAZs": ""}]}}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS Name of the Load Balancer", "Value": {"Fn::GetAtt": 