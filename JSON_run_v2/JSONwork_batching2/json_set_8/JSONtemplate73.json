{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create a Multi-AZ EFS with automatic mount targets.", "Resources": {"EFSFileSystem": {"Type": "AWS::EFS::FileSystem", "Properties": {"BackupPolicy": {"Status": "ENABLED"}, "FileSystemTags": [{"Key": "Name", "Value": "MyEFS"}], "ThroughputMode": "bursting", "LifecyclePolicies": [{"TransitionToIA": "AFTER_30_DAYS"}]}}, "MountTarget1": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "EFSFileSystem"}, "SecurityGroups": [{"Ref": "MySecurityGroup"}], "SubnetId": {"Ref": "Subnet1"}}}, "MountTarget2": {"Type": "AWS::EFS::MountTarget", "Properties": {"FileSystemId": {"Ref": "EFSFileSystem"}, "SecurityGroups": [{"Ref": "MySecurityGroup"}], "SubnetId": {"Ref": "Subnet2"}}}}, "Parameters": {"Subnet1": {"Type": "AWS::EC2::Subnet::Id", "Description": "Select the first subnet for the EFS mount target."}, "Subnet2": {"Type": "AWS::EC2::Subnet::Id", "Description": "Select the second subnet for the EFS mount target."}, "MySecurityGroup": {"Type": "AWS::EC2::SecurityGroup::Id", "Description": "Security Group for the EFS mount targets."}}, "Outputs": {"FileSystemId": {"Description": "File System ID of the created EFS", "Value": {"Ref": "EFSFileSystem"}, "Export": {"Name": {"Fn::Sub": "${AWS::StackName}-EFSFileSystemId"}}}}}