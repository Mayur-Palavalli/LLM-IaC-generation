{"AWSTemplateFormatVersion": "2010-09-09", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "must be a valid EC2 instance type."}}, "Mappings": {"AWSRegionToAMI": {"us-east-1": {"AMI": "ami-0c55b159cbfafe1f0"}, "us-west-1": {"AMI": "ami-0bdb828fd58c52235"}, "us-west-2": {"AMI": "ami-07ebfd5b3428b6f4d"}, "eu-west-1": {"AMI": "ami-0a91cd140a1fc148a"}, "eu-central-1": {"AMI": "ami-09558250a3419e7d0"}}}, "Resources": {"EC2InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable SSH access", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": "0.0.0.0/0"}]}}, "EC2Instance": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroupIds": [{"Ref": "EC2InstanceSecurityGroup"}], "ImageId": {"Fn::FindInMap": ["AWSRegionToAMI", {"Ref": "AWS::Region"}, "AMI"]}}}}, "Outputs": {"InstanceID": {"Description": "The Instance ID", "Value": {"Ref": "EC2Instance"}}, "PublicIP": {"Description": "The Public IP address of the EC2 instance", "Value": {"Fn::GetAtt": ["EC2Instance", "PublicIp"]}}}}