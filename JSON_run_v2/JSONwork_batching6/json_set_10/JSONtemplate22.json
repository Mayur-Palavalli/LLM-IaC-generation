{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template for a Load Balanced, Auto Scaled Sample Website with Time-based Scheduled Actions and a Simple Health Check", "Resources": {"SampleLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"AvailabilityZones": {"Fn::GetAZs": {"Ref": "AWS::Region"}}, "Listeners": [{"LoadBalancerPort": "80", "InstancePort": "80", "Protocol": "HTTP"}], "HealthCheck": {"Target": "HTTP:80/", "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}}}, "SampleLaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-12345678", "InstanceType": "t2.micro", "SecurityGroups": [{"Ref": "InstanceSecurityGroup"}]}}, "InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "80", "ToPort": "80", "CidrIp": "0.0.0.0/0"}]}}, "SampleAutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-0bb1c79de3EXAMPLE"], "LaunchConfigurationName": {"Ref": "SampleLaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "LoadBalancerNames": [{"Ref": "SampleLoadBalancer"}]}}, "ScaleUpPolicy": {"Type": "AWS::AutoScaling::ScalingPolicy", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "AdjustmentType": "ChangeInCapacity", "Cooldown": "300", "ScalingAdjustment": "1"}}, "ScaleDownPolicy": {"Type": "AWS::AutoScaling::ScalingPolicy", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "AdjustmentType": "ChangeInCapacity", "Cooldown": "300", "ScalingAdjustment": "-1"}}, "ScheduledActionScaleUp": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "DesiredCapacity": "3", "Recurrence": "0 8 * * *", "MinSize": "1", "MaxSize": "3"}}, "ScheduledActionScaleDown": {"Type": "AWS::AutoScaling::ScheduledAction", "Properties": {"AutoScalingGroupName": {"Ref": "SampleAutoScalingGroup"}, "DesiredCapacity": "1", "Recurrence": "0 20 * * *"}}}, "Outputs": {"URL": {"Description": "The URL of the load balancer", "Value": {"Fn::Join": ["", ["http://", {"Fn::GetAtt": ["SampleLoadBalancer", "DNSName"]}]]}}}}