{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation template to create an Amazon EC2 instance running Amazon Linux AMI with SSH access.", "Parameters": {"KeyName": {"Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance", "Type": "AWS::EC2::KeyPair::KeyName", "ConstraintDescription": "must be the name of an existing EC2 KeyPair."}}, "Mappings": {"AWSRegionArch2AMI": {"us-east-1": {"HVM64": "ami-0c55b159cbfafe1f0"}, "us-west-1": {"HVM64": "ami-0bdb828fd58c52235"}, "us-west-2": {"HVM64": "ami-0892d3c7ee96c0bf7"}, "eu-west-1": {"HVM64": "ami-047bb4163c506cd98"}, "eu-west-2": {"HVM64": "ami-0aab355e0c46f232c"}, "ap-southeast-1": {"HVM64": "ami-08569b978cc4dfa10"}, "ap-southeast-2": {"HVM64": "ami-09b42976632b27e9b"}, "ap-northeast-1": {"HVM64": "ami-06cd52961ce9f0d85"}, "ap-northeast-2": {"HVM64": "ami-0b37c94de7b501c0e"}, "sa-east-1": {"HVM64": "ami-07b14488da8ea02a0"}, "ca-central-1": {"HVM64": "ami-047cdd6dfea2e8164"}, "eu-central-1": {"HVM64": "ami-0703cbc2far2b3c8c"}, "us-east-2": {"HVM64": "ami-00ddb0e5626798373"}}}, "Resources": {"EC2InstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable SSH access via port 22", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": "22", "ToPort": "22", "CidrIp": "0.0.0.0/0"}]}}, "EC2Instance": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": "t2.micro", "SecurityGroupIds": [{"Ref": "EC2InstanceSecurityGroup"}], "KeyName": {"Ref": "KeyName"}, "ImageId": {"Fn::FindInMap": ["AWSRegionArch2AMI", {"Ref": "AWS::Region"}, "HVM64"]}}}}, "Outputs": {"InstanceId": {"Description": "Instance ID of the newly created EC2 instance", "Value": {"Ref": "EC2Instance"}}, "PublicIP": {"Description": "Public IP address of the newly created EC2 instance", "Value": {"Fn::GetAtt": ["EC2Instance", "PublicIp"]}}}}