{"AWSTemplateFormatVersion": "2010-09-09", "Description": "AWS CloudFormation Template - Load Balanced Auto Scaled Sample Website", "Parameters": {"InstanceType": {"Type": "String", "Default": "t2.micro", "Description": "EC2 instance type", "AllowedValues": ["t2.micro", "t2.small", "t2.medium"], "ConstraintDescription": "must be a valid EC2 instance type."}, "KeyName": {"Description": "Name of an existing EC2 KeyPair to enable SSH access to the instances", "Type": "AWS::EC2::KeyPair::KeyName", "ConstraintDescription": "must be the name of an existing EC2 KeyPair."}, "WebServerPort": {"Type": "String", "Default": "8888", "Description": "Port where the web server will listen"}}, "Resources": {"WebServerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access via port 80 locked down to the load balancer", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "WebServerPort"}, "ToPort": {"Ref": "WebServerPort"}, "SourceSecurityGroupId": {"Fn::GetAtt": ["ElasticLoadBalancer", "SourceSecurityGroup.GroupId"]}}]}}, "ElasticLoadBalancerSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable access to the load balancer on port 80", "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": 80, "ToPort": 80, "CidrIp": "0.0.0.0/0"}]}}, "ElasticLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"SecurityGroups": [{"Ref": "ElasticLoadBalancerSecurityGroup"}], "Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "WebServerPort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "WebServerPort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "CrossZone": true}}, "LaunchConfiguration": {"Type": "AWS::AutoScaling::LaunchConfiguration", "Properties": {"ImageId": "ami-0c55b159cbfafe1f0", "InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "WebServerSecurityGroup"}], "KeyName": {"Ref": "KeyName"}, "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash -xe\n", "yum update -y\n", "yum install -y httpd\n", "/usr/sbin/service httpd start\n", "chkconfig httpd on\n", "echo \"<html><body><h1>Sample Website</h1></body></html>\" > /var/www/html/index.html\n"]]}}}}, "AutoScalingGroup": {"Type": "AWS::AutoScaling::AutoScalingGroup", "Properties": {"VPCZoneIdentifier": ["subnet-12345678"], "LaunchConfigurationName": {"Ref": "LaunchConfiguration"}, "MinSize": "1", "MaxSize": "3", "DesiredCapacity": "1", "LoadBalancerNames": [{"Ref": "ElasticLoadBalancer"}], "HealthCheckType": "ELB", "HealthCheckGracePeriod": 300}}}, "Outputs": {"URL": {"Description": "URL of the sample website", "Value": {"Fn::GetAtt": ["ElasticLoadBalancer", "DNSName"]}}}}