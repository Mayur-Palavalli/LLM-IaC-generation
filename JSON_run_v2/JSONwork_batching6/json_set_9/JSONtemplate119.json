{"AWSTemplateFormatVersion": "2010-09-09", "Resources": {"MyChannel": {"Type": "AWS::IoTAnalytics::Channel", "Properties": {"ChannelName": "MyChannel", "RetentionPeriod": {"NumberOfDays": 7, "Unlimited": false}}}, "MyDatastore": {"Type": "AWS::IoTAnalytics::Datastore", "Properties": {"DatastoreName": "MyDatastore", "RetentionPeriod": {"NumberOfDays": 14, "Unlimited": false}}}, "MyPipeline": {"Type": "AWS::IoTAnalytics::Pipeline", "Properties": {"PipelineName": "MyPipeline", "PipelineActivities": [{"Channel": {"Name": "MyChannelActivity", "ChannelName": {"Ref": "MyChannel"}, "Next": "MySqlActivity"}}, {"SelectAttributes": {"Name": "MySqlActivity", "Next": "MyDatastoreActivity", "Attributes": ["attribute1", "attribute2"]}}, {"Datastore": {"Name": "MyDatastoreActivity", "DatastoreName": {"Ref": "MyDatastore"}}}]}}, "MyDataset": {"Type": "AWS::IoTAnalytics::Dataset", "Properties": {"DatasetName": "MyDataset", "ContentDeliveryRules": [{"Destination": {"IotEventsDestinationConfiguration": {"InputName": "MyInput", "RoleArn": "arn:aws:iam::123456789012:role/MyRole"}}}], "Actions": [{"ActionName": "MySqlAction", "QueryAction": {"SqlQuery": "SELECT * FROM MyDatastoreActivity"}}], "Triggers": [{"Schedule": {"ScheduleExpression": "rate(1 hour)"}}]}}}}