{"AWSTemplateFormatVersion": "2010-09-09", "Description": "CloudFormation template to deploy two EC2 instances behind an ELB with a simple health check.", "Parameters": {"InstanceType": {"Description": "EC2 instance type", "Type": "String", "Default": "t2.micro"}, "InstancePort": {"Description": "Port on which the instance listens", "Type": "Number", "Default": 8888}, "VPC": {"Type": "AWS::EC2::VPC::Id", "Description": "VPC ID"}, "Subnets": {"Type": "List<AWS::EC2::Subnet::Id>", "Description": "Subnets to be used for the load balancer"}}, "Resources": {"MyInstanceSecurityGroup": {"Type": "AWS::EC2::SecurityGroup", "Properties": {"GroupDescription": "Enable HTTP access on the inbound port", "VpcId": {"Ref": "VPC"}, "SecurityGroupIngress": [{"IpProtocol": "tcp", "FromPort": {"Ref": "InstancePort"}, "ToPort": {"Ref": "InstancePort"}, "CidrIp": "0.0.0.0/0"}]}}, "MyLoadBalancer": {"Type": "AWS::ElasticLoadBalancing::LoadBalancer", "Properties": {"Subnets": {"Ref": "Subnets"}, "Listeners": [{"LoadBalancerPort": "80", "InstancePort": {"Ref": "InstancePort"}, "Protocol": "HTTP"}], "HealthCheck": {"Target": {"Fn::Join": ["", ["HTTP:", {"Ref": "InstancePort"}, "/"]]}, "HealthyThreshold": "3", "UnhealthyThreshold": "5", "Interval": "30", "Timeout": "5"}, "SecurityGroups": [{"Ref": "MyInstanceSecurityGroup"}]}}, "WebInstance1": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "MyInstanceSecurityGroup"}], "ImageId": {"Fn::FindInMap": ["AWSRegionArch2AMI", {"Ref": "AWS::Region"}, {"Fn::FindInMap": ["AWSInstanceType2Arch", {"Ref": "InstanceType"}, "Arch"]}]}, "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n", "echo '<html><h1>Instance 1</h1></html>' > /var/www/html/index.html\n"]]}}}}, "WebInstance2": {"Type": "AWS::EC2::Instance", "Properties": {"InstanceType": {"Ref": "InstanceType"}, "SecurityGroups": [{"Ref": "MyInstanceSecurityGroup"}], "ImageId": {"Fn::FindInMap": ["AWSRegionArch2AMI", {"Ref": "AWS::Region"}, {"Fn::FindInMap": ["AWSInstanceType2Arch", {"Ref": "InstanceType"}, "Arch"]}]}, "UserData": {"Fn::Base64": {"Fn::Join": ["", ["#!/bin/bash\n", "yum install -y httpd\n", "service httpd start\n", "chkconfig httpd on\n", "echo '<html><h1>Instance 2</h1></html>' > /var/www/html/index.html\n"]]}}}}}, "Mappings": {"AWSInstanceType2Arch": {"t2.micro": {"Arch": "HVM64"}}, "AWSRegionArch2AMI": {"us-east-1": {"HVM64": "ami-0c55b159cbfafe1f0"}}}, "Outputs": {"LoadBalancerDNSName": {"Description": "DNS Name of the load balancer", "Value": {"Fn::GetAtt": ["MyLoadBalancer", "DNSName"]}}}}